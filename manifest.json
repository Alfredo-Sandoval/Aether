{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_title": "__MSG_actionTitle__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://openai.com/*"],
      "js": ["i18n-loader.js", "content.js"],
      "css": ["styles.css", "sidebar.css", "quick-settings.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "Aether/grok-4.webp",
        "Aether/grok_white.webp",
        "Aether/grok_darko.png",
        "Aether/grok_verde.png",
        "Aether/blue-galaxy.webp",
        "Aether/cosmic-purple.webp",
        "Aether/deep-space-nebula.webp",
        "Aether/milky-way-galaxy.webp",
        "Aether/nebula-purple-blue.webp",
        "Aether/space-stars-purple.webp",
        "Aether/space-orion-nebula-nasa.webp",
        "Aether/space-pillars-creation-jwst.webp",
        "Aether/space-milkyway-blue-pexels.webp",
        "Aether/space-milkyway-ridge-pexels.webp",
        "Aether/space-purple-nebula-unsplash.webp",
        "Aether/space-purple-stars-pexels.webp",
        "Aether/aurora-classic.webp",
        "_locales/*/messages.json"
      ],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://openai.com/*"]
    }
  ]
}
